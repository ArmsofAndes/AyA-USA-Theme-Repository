{% schema %}
{
  "name": "Custom Image + Text Grid",
  "settings": [
    {
  "type": "select",
  "id": "font_family",
  "label": "Tipografía",
  "default": "montserrat",
  "options": [
    { "value": "helvetica", "label": "Helvetica Neue" },
    { "value": "arimo", "label": "Arimo" },
    { "value": "roboto", "label": "Roboto" },
    { "value": "poppins", "label": "Poppins Light" },
    { "value": "source-sans", "label": "Source Sans" },
    { "value": "montserrat", "label": "Montserrat" }
  ]
},

    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Fila",
      "settings": [
        {
          "type": "image_picker",
          "id": "left_image_1",
          "label": "Izquierda - Imagen 1"
        },
        {
          "type": "text",
          "id": "left_text_1",
          "label": "Izquierda - Texto 1"
        },
        {
          "type": "image_picker",
          "id": "left_image_2",
          "label": "Izquierda - Imagen 2"
        },
        {
          "type": "text",
          "id": "left_text_2",
          "label": "Izquierda - Texto 2"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Derecha - Imagen"
        },
        {
          "type": "text",
          "id": "right_text",
          "label": "Derecha - Texto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image + Text Grid",
      "blocks": [
        { "type": "row" },
        { "type": "row" },
        { "type": "row" }
      ]
    }
  ]
}
{% endschema %}

<div class="custom-grid font-{{ section.settings.font_family }}" style="background-color: {{ section.settings.background_color }};">
  {% for block in section.blocks %}
    <div class="custom-grid__row">
      <!-- Columna Izquierda -->
      <div class="custom-grid__col left">
        <div class="custom-grid__item small">
          {% if block.settings.left_image_1 != blank %}
            <img src="{{ block.settings.left_image_1 | image_url: width: 600 }}" alt="">
          {% endif %}
          {% if block.settings.left_text_1 != blank %}
            <p>{{ block.settings.left_text_1 }}</p>
          {% endif %}
        </div>
        <div class="custom-grid__item large">
          {% if block.settings.left_image_2 != blank %}
            <img src="{{ block.settings.left_image_2 | image_url: width: 600 }}" alt="">
          {% endif %}
          {% if block.settings.left_text_2 != blank %}
            <p>{{ block.settings.left_text_2 }}</p>
          {% endif %}
        </div>
      </div>

      <!-- Columna Derecha -->
      <div class="custom-grid__col right">
        <div class="custom-grid__item full">
          {% if block.settings.right_image != blank %}
            <img src="{{ block.settings.right_image | image_url: width: 800 }}" alt="">
          {% endif %}
          {% if block.settings.right_text != blank %}
            <p>{{ block.settings.right_text }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
<style>
  .font-helvetica {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
.font-arimo {
  font-family: 'Arimo', sans-serif;
}
.font-roboto {
  font-family: 'Roboto', sans-serif;
}
.font-poppins {
  font-family: 'Poppins', sans-serif;
  font-weight: 300;
}
.font-source-sans {
  font-family: 'Source Sans Pro', sans-serif;
}
.font-montserrat {
  font-family: 'Montserrat', sans-serif;
}

    .custom-grid {
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  gap: 60px;
}

.custom-grid__row {
  display: grid;
  grid-template-columns: 1fr 0.9fr;
  gap: 45px;
  align-items: start;
}

.custom-grid__col {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.custom-grid__item img {
  width: 100%;
  border-radius: 12px;
  object-fit: cover;
  display: block;
  margin-bottom: 8px;
}

/* Diferentes tamaños */
.custom-grid__item.small img {
  max-width: 80%; /* un poco más angosta */
}

.custom-grid__item.large img {
  max-width: 100%; /* más ancha */
}

.custom-grid__item.full img {
  width: 100%; /* ocupa todo el espacio */
}

.custom-grid__item p {
  font-size: 16px;
  line-height: 1.5;
  padding-right:30%;
}

.custom-grid__col.left .custom-grid__item.small {
  margin-left: 10%; }

/* Responsivo */
@media (max-width: 768px) {
  .custom-grid__row {
    grid-template-columns: 1fr;
  }
  .custom-grid__item.small img,
  .custom-grid__item.large img {
    max-width: 100%; /* en mobile todas iguales */
  }
}

</style>