        if (announcementBarTop && announcementBarTop !== section) {
          const topHeight = announcementBarTop.offsetHeight || (window.matchMedia('(max-width: 767px)').matches ? 46 : 42);
          totalHeight += topHeight;
          document.documentElement.style.setProperty('--announcement-top-height', topHeight + 'px');
