    // Usar MutationObserver para detectar cambios
    const observer = new MutationObserver(function(mutations) {
      let shouldUpdate = false;
      mutations.forEach(function(mutation) {
        if (mutation.type === 'childList') {
          mutation.addedNodes.forEach(function(node) {
            if (node.nodeType === 1) {
              const countdownBar = node.querySelector && node.querySelector('.announcement-bar-countdown');
              if (countdownBar || (node.classList && node.classList.contains('announcement-bar-countdown'))) {
