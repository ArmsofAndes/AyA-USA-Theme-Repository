<style>
  .custom-table-container {
  margin: 20px;
  padding: 10px;
  text-align: center;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 16px;
}

.custom-table {
  width: 100%;
  border-collapse: collapse;
   margin: 20px 0;
}

.custom-table th, .custom-table td {
  padding: 10px;
  border: 1px solid #ddd;
  text-align: center;
  
}

.custom-table th {
  background-color: #f4f4f4;
  font-weight: bold;
}

.custom-table-container table {
  box-shadow: rgba(0, 0, 0, 0.25) 4px 4px 16px;
}
  
.column-one{
  background-color: #f4f4f4;
}

.custom-table-container table tr:nth-child(n+1):nth-child(-n+8):hover {
  background-color: #f0f0f0; 
  transition: background-color 0.3s ease;
}
  
</style>

