{{ 'countdown-banner.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign color_bg = section.settings.color_bg
  assign color_text = section.settings.color_text
  assign timer_year = section.settings.timer_year
  assign timer_month = section.settings.timer_month
  assign timer_day = section.settings.timer_day
  assign timer_hour = section.settings.timer_hour
  assign timer_minute = section.settings.timer_minute
  assign timezone = 1 | date: '%z'

  capture date
    echo timer_day | append: '-' | append: timer_month | append: '-' | append: timer_year
  endcapture

  capture time
    echo timer_hour | append: ':' | append: timer_minute
  endcapture
-%}

<div class="countdown-slim" style="background-color: {{ color_bg }}; color: {{ color_text }};">
  <div class="countdown-slim__inner">
    
    <!-- Texto lado izquierdo -->
    <div class="countdown-slim__text">
      {% if section.settings.heading != blank %}
        <h2 style="color: {{ color_text }};font-size: {{ section.settings.heading_font_size }}px;">
            {{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.content != blank %}
        <div class="countdown-slim__content" style="color: {{ color_text }};font-size: {{ section.settings.content_font_size }}px;">
          {{ section.settings.content }}
        </div>
      {% endif %}
    </div>

    <!-- Contador lado derecho -->
    <div class="countdown-slim__timer">
      <countdown-timer 
        class="countdown-timer" 
        data-date="{{ date }}" 
        data-time="{{ time }}" 
        data-timezone="{{ timezone }}">
        
        <div class="countdown-timer--column days">
      <span class="countdown-timer--column--number" style="font-size: {{ section.settings.counter_number_size }}px;">
        0
      </span>
      <span class="countdown-timer--column--text" style="font-size: {{ section.settings.counter_text_size }}px;">
        {{ 'sections.countdown_banner.days' | t }}
      </span>
    </div>

    <div class="countdown-timer--column hours">
      <span class="countdown-timer--column--number" style="font-size: {{ section.settings.counter_number_size }}px;">
        0
      </span>
      <span class="countdown-timer--column--text" style="font-size: {{ section.settings.counter_text_size }}px;">
        {{ 'sections.countdown_banner.hours' | t }}
      </span>
    </div>

    <div class="countdown-timer--column minutes">
      <span class="countdown-timer--column--number" style="font-size: {{ section.settings.counter_number_size }}px;">
        0
      </span>
      <span class="countdown-timer--column--text" style="font-size: {{ section.settings.counter_text_size }}px;">
        {{ 'sections.countdown_banner.minutes' | t }}
      </span>
    </div>

    <div class="countdown-timer--column seconds">
      <span class="countdown-timer--column--number" style="font-size: {{ section.settings.counter_number_size }}px;">
        0
      </span>
      <span class="countdown-timer--column--text" style="font-size: {{ section.settings.counter_text_size }}px;">
        {{ 'sections.countdown_banner.seconds' | t }}
      </span>
    </div>

  </countdown-timer>
</div>

  </div>
</div>
<style>
    .countdown-slim {
  padding: 15px 10%;
  
}

.countdown-slim__inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 40px;
  flex-wrap: wrap;
}

.countdown-slim__text {
  flex: 1;
  max-width: 50%;
  
}

.countdown-slim__timer {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 30px; 
}
.countdown-timer {
  display: flex;
  gap: 30px; /* separación entre days, hours, minutes, seconds */
}

.countdown-timer--column {
  display: flex;
  flex-direction: row;
  align-items: center;
  min-width: 60px; /* ancho fijo para alinear */
  gap: 8px;
}

.countdown-timer--column--number {
  font-size: 2rem;
  font-weight: bold;
}

.countdown-timer--column--text {
  font-size: 0.9rem;
  margin-top: 0px;
}

.countdown-slim__content p{
margin:0;}

@media (max-width: 768px) {
  .countdown-slim__inner {
    flex-direction: column;       /* apila verticalmente */
    align-items: center;          /* centra todo */
    gap: 10px;
  }

  .countdown-slim__text {
    max-width: 100%;
    text-align: center;           /* centra el texto */
  }

  .countdown-slim__timer {
    justify-content: center;      /* centra el contador */
    gap: 1px;                    /* menos espacio entre columnas */
  }
.countdown-timer{
    gap: 10px;
}
  .countdown-timer--column {
    min-width: 45px;              /* más estrecho en mobile */
    gap: 4px;
  }

  .countdown-timer--column--number {
    font-size: calc({{ section.settings.counter_number_size }}px * 0.7); /* reduce tamaño en mobile */
  }

  .countdown-timer--column--text {
    font-size: calc({{ section.settings.counter_text_size }}px * 0.7);   /* reduce tamaño en mobile */
  }

  h2 {
    font-size: calc({{ section.settings.heading_font_size }}px * 0.8);    /* reduce heading */
  }

  .countdown-slim__content {
    font-size: calc({{ section.settings.content_font_size }}px * 0.8);    /* reduce texto */
  }
}
</style>
<script src="{{ 'countdown-banner.js' | asset_url }}" defer="defer"></script>

