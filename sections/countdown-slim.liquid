<script>
  (function() {
    document.addEventListener('DOMContentLoaded', function() {
      const countdownSections = document.querySelectorAll('.countdown-slim');
      
      countdownSections.forEach(function(section) {
        const timer1 = section.querySelector('.countdown-timer-1');
        const timer2Container = section.querySelector('.countdown-timer-2-container');
        const heading1 = section.querySelector('.countdown-heading-1');
        const heading2 = section.querySelector('.countdown-heading-2');
        
        if (!timer1) return;
        
        const hasTimer2 = timer2Container && timer2Container.querySelector('.countdown-timer-2');
        
        if (!hasTimer2) {
          return;
        }
        
        const timer2 = timer2Container.querySelector('.countdown-timer-2');
        
        function parseTimerDate(timer) {
          const dateStr = timer.dataset.date;
          const timeStr = timer.dataset.time;
          const timezone = timer.dataset.timezone;
          
          if (!dateStr || !timeStr) return null;
          
          const [day, month, year] = dateStr.split('-');
          const [hour, minute] = timeStr.split(':');
          
          const dateString = month + '/' + day + '/' + year + ' ' + hour + ':' + minute + ' GMT' + timezone;
          return new Date(dateString).getTime();
        }
        
        function updateTimerVisibility() {
          const now = Date.now();
          const date1 = parseTimerDate(timer1);
          const date2 = parseTimerDate(timer2);
          
          if (!date1) return;
          if (!date2) {
            if (heading1) heading1.style.display = '';
            if (heading2) heading2.style.display = 'none';
            if (timer1) timer1.style.display = '';
            if (timer2Container) timer2Container.style.display = 'none';
            return;
          }
          
          const distance1 = date1 - now;
          const distance2 = date2 - now;
          
          if (distance2 > 0 && distance2 < distance1) {
            if (heading1) heading1.style.display = 'none';
            if (heading2) heading2.style.display = '';
            if (timer1) timer1.style.display = 'none';
            if (timer2Container) timer2Container.style.display = '';
          } else if (distance1 > 0) {
            if (heading1) heading1.style.display = '';
            if (heading2) heading2.style.display = 'none';
            if (timer1) timer1.style.display = '';
            if (timer2Container) timer2Container.style.display = 'none';
          } else {
            if (heading1) heading1.style.display = '';
            if (heading2) heading2.style.display = 'none';
            if (timer1) timer1.style.display = '';
            if (timer2Container) timer2Container.style.display = 'none';
          }
        }
        
        updateTimerVisibility();
        
        const activeTimer = section.querySelector('.countdown-timer-1[style*="display: none"]') ? timer2 : timer1;
        
        if (activeTimer) {
          setInterval(function() {
            updateTimerVisibility();
          }, 1000);
        }
      });
    });
  })();
</script>

