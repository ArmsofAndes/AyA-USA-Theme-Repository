{% schema %}
{
  "name": "Alpaca Wool Features",
  "tag": "section",
  "class": "alpaca-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "Experience Alpaca Wool"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "THERMO-REGULATION"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción",
          "default": "Descripción del beneficio del producto."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alpaca Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.alpaca-section {
  background-color: #f7f7f7;
  padding: 60px 20px;
  font-family: 'Poppins', sans-serif;
  width: 100%;
}

.section-title {
  font-size: 32px;
  margin-bottom: 40px;
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px;
  text-align: left;
  width: 100%;
}

.feature {
  padding: 0 20px;
}

.feature-title {
  font-weight: bold;
  text-transform: uppercase;
  font-size: 16px;
  margin-bottom: 12px;
}

.feature-desc {
  color: #333;
  font-size: 14px;
  line-height: 1.6;
}

@media screen and (max-width: 767px) {
  .features-grid {
    grid-template-columns: 1fr;
  }
 .section-title{
    font-size: 25px!important;
  }
  .alpaca-section{
  padding-left:0px!important;
    padding-right:0px!important;
  }
}
{% endstyle %}

<section class="alpaca-section">
  <h2 class="section-title">{{ section.settings.heading }}</h2>
  <div class="features-grid">
    {% for block in section.blocks %}
      <div class="feature">
        <h3 class="feature-title">{{ block.settings.title }}</h3>
        <p class="feature-desc">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

