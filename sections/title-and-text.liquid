<div class="custom-dual-column-section" {% if section.settings.custom_anchor_id != blank %}
    id="{{ section.settings.custom_anchor_id }}"
  {% endif %} 
   style=" {% if section.settings.background_image != blank %}
  background-image: url({{ section.settings.background_image | img_url: 'master' }}); background-size: cover;
  background-position: center; background-repeat: no-repeat;{% else %}
      background-color: white;
    {% endif %}">

  <div class="custom-dual-column-wrapper">
    <!-- Columna Izquierda -->
    <div class="custom-column-left12">
      {% if section.settings.left_subheading != blank %}
        <p style="font-size: {{ section.settings.left_subheading_size }}px;
                  font-weight: {{ section.settings.left_subheading_weight }};
                  color: {{ section.settings.left_subheading_color }};
                  text-align: {{ section.settings.left_alignment }};letter-spacing: 1px;">
          {{ section.settings.left_subheading }}
        </p>
      {% endif %}
      {% if section.settings.left_heading != blank %}
        <h2 style="font-size: {{ section.settings.left_heading_size }}px;
                   font-weight: {{ section.settings.left_heading_weight }};
                   color: {{ section.settings.left_heading_color }};line-height:1.3;
                   text-align: {{ section.settings.left_alignment }};">
          {{ section.settings.left_heading }}
        </h2>
      {% endif %}
      {% if section.settings.left_text != blank %}
        <div class="text-left richtext"style="font-size: {{ section.settings.left_text_size }}px;
                    font-weight: {{ section.settings.left_text_weight }};
                    color: {{ section.settings.left_text_color }};
                    text-align: {{ section.settings.left_alignment }};">
          {{ section.settings.left_text }}
        </div>
      {% endif %}
      {% if section.settings.left_button_text != blank %}
  <a class="custom-button {% if section.settings.left_button_outline %}outline{% endif %}"
     href="{{ section.settings.left_button_link }}"
     style="
      font-size: {{ section.settings.left_button_font_size }}px;
      font-weight: {{ section.settings.left_button_font_weight }};
      color: {{ section.settings.left_button_text_color }};
      background-color: {{ section.settings.left_button_background }};
      border: {{ section.settings.left_button_border_width }}px solid {{ section.settings.left_button_border_color }};
      border-radius: {{ section.settings.left_button_border_radius }}px;
      padding: 10px 20px;
      display: inline-block;
      text-decoration: none;
     ">
    {{ section.settings.left_button_text }}
  </a>
{% endif %}

{% assign icon_blocks_left = section.blocks | where: "type", "icon_column_left" %}

{% if icon_blocks_left.size > 0 %}
  <div class="custom-icons-grid12">
    {% for block in icon_blocks_left %}
      <div class="custom-icon-column12">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | img_url: '80x' }}" alt="{{ block.settings.title | escape }}" class="custom-icon-image12">
        {% endif %}
        {% if block.settings.title != blank %}
          <h3 class="custom-icon-title12" style="font-size: {{ block.settings.title_size }}px; color: {{ block.settings.title_color }}; font-weight: {{ block.settings.title_weight }};">
            {{ block.settings.title }}
          </h3>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="custom-icon-text12 rte" style="font-size: {{ block.settings.text_size }}px; color: {{ block.settings.text_color }}; font-weight: {{ block.settings.text_weight }};">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% endif %}
      
    </div>

    <!-- Columna Derecha -->
    <div class="custom-column-right22">
      {% if section.settings.right_subheading != blank %}
        <p style="font-size: {{ section.settings.right_subheading_size | divided_by: 16.0 }}rem;
                  font-weight: {{ section.settings.right_subheading_weight }};
                  color: {{ section.settings.right_subheading_color }};
