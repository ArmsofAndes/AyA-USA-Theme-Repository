.text-with-videos {
  padding: 0 0 0% 5%;
}

.text-with-videos__container {
  display: grid;
  grid-template-columns: 1.1fr 0.68fr 1.3fr;
  gap: 3px;
  align-items: stretch;
}

/* Texto */
.text-with-videos__left {
