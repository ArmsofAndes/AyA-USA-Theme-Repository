<div class="product-features-section" 
     style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">
  
  {% if section.settings.show_title and section.settings.section_title != blank %}
    <h3 class="product-features-title" 
        style="text-align: {{ section.settings.title_alignment }}; 
               font-size: {{ section.settings.title_size }}px;
               font-weight: {{ section.settings.title_weight }};
               color: {{ section.settings.title_color }};
               margin-bottom: {{ section.settings.title_margin }}px;">
      {{ section.settings.section_title }}
    </h3>
  {% endif %}

  <div class="product-features-grid" 
       style="display: flex; 
              flex-wrap: wrap;
              justify-content: center;
              align-items: flex-start;
              gap: {{ section.settings.icon_spacing }}px;">
    
    {% for block in section.blocks %}
      <div class="feature-item" {{ block.shopify_attributes }}
           style="text-align: center; 
                  max-width: 150px; 
                  flex: 0 1 auto;">
        
        <!-- Ícono -->
        <div class="feature-icon" 
             style="width: {{ section.settings.icon_size }}px; 
                    height: {{ section.settings.icon_size }}px;
                    margin: 0 auto {{ section.settings.text_spacing }}px auto;
                    display: flex;
                    align-items: center;
                    justify-content: center;">
          
          {% if block.settings.uploaded_icon != blank %}
            <!-- Ícono subido -->
            <img src="{{ block.settings.uploaded_icon | image_url: width: section.settings.icon_size }}" 
                 alt="{{ block.settings.feature_text | escape }}"
                 width="{{ section.settings.icon_size }}"
                 height="{{ section.settings.icon_size }}"
                 style="width: {{ section.settings.icon_size }}px; 
                        height: {{ section.settings.icon_size }}px; 
                        object-fit: contain;">
          {% else %}
            <!-- Placeholder cuando no hay ícono -->
            <div style="width: {{ section.settings.icon_size }}px; 
                        height: {{ section.settings.icon_size }}px; 
                        border: 2px dashed #ccc; 
                        display: flex; 
                        align-items: center; 
                        justify-content: center;
                        color: #999;
                        font-size: 12px;">
              No icon
            </div>
          {% endif %}
        </div>
        
        <!-- Texto -->
        {% if block.settings.feature_text != blank %}
          <p class="feature-text" 
             style="margin: 0;
                    font-size: {{ block.settings.text_size | default: section.settings.text_size }}px;
                    font-weight: {{ block.settings.text_weight | default: section.settings.text_weight }};
                    color: {{ block.settings.text_color }};
                    text-align: {{ block.settings.text_alignment | default: 'center' }};
                    line-height: 1.3;">
            {{ block.settings.feature_text }}
          </p>
        {% endif %}
        
        {% if block.settings.subtitle_text != blank %}
          <p class="feature-subtitle" 
             style="margin: {{ block.settings.subtitle_spacing | default: section.settings.subtitle_spacing }}px 0 0 0;
                    font-size: {{ block.settings.subtitle_size | default: section.settings.subtitle_size }}px;
                    font-weight: {{ block.settings.subtitle_weight | default: section.settings.subtitle_weight }};
                    color: {{ block.settings.subtitle_color }};
                    text-align: {{ block.settings.subtitle_alignment | default: 'center' }};
                    line-height: 1.2;">
            {{ block.settings.subtitle_text }}
          </p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .product-features-section {
    width: 100%;
  }
  
  @media (max-width: 768px) {
    .product-features-grid {
      gap: 20px !important;
    }
    
    .feature-item {
      flex: 0 1 calc(50% - 10px) !important;
      max-width: calc(50% - 10px) !important;
    }
  }
  
  @media (max-width: 480px) {
    .product-features-grid {
      gap: 15px !important;
    }
    
    .feature-item {
      flex: 0 1 100% !important;
      max-width: 100% !important;
    }
  }
  
  .feature-item svg {
    transition: all 0.3s ease;
  }
  
  .feature-item:hover svg {
    transform: scale(1.1);
  }
</style>

