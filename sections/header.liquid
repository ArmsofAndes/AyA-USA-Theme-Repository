.mega-menu-promotion {
  width: {{ section.settings.mega_menu_promo_width | default: 210 }}px;
  height: {{ section.settings.mega_menu_promo_height | default: 200 }}px;
  position: relative;
  overflow: hidden;
  display: inline-block;
  margin-bottom: {{ section.settings.mega_menu_promo_margin_bottom | default: 2 }}%;
  margin-top: {{ section.settings.mega_menu_promo_margin_top | default: 3 }}%;
}

.mega-menu-promotion img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.mega-menu-promotion--cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  color: white;
  text-shadow: 0 0 5px rgba(0, 0, 0, 0.7);
  box-sizing: border-box;
  text-align: center;
  padding-top: {{ section.settings.mega_menu_promo_padding_top | default: 30 }}px;
  padding-bottom: {{ section.settings.mega_menu_promo_padding_bottom | default: 2 }}%;
  padding-left: {{ section.settings.mega_menu_promo_padding_left | default: 3 }}%;
  padding-right: {{ section.settings.mega_menu_promo_padding_right | default: 3 }}%;
}

.mega-menu-promotion--cover .heading-font {
  font-weight: {% if section.settings.mega_menu_promo_heading_weight == 'bold' %}bold{% elsif section.settings.mega_menu_promo_heading_weight != blank %}{{ section.settings.mega_menu_promo_heading_weight }}{% else %}bold{% endif %};
  font-size: {{ section.settings.mega_menu_promo_heading_size | default: 0.9 }}rem;
  margin: 0;
}

.mega-menu-promotion--cover .text-button {
  margin-top: {{ section.settings.mega_menu_promo_button_margin_top | default: 6 }}px;
  padding: 0 {{ section.settings.mega_menu_promo_button_padding | default: 5 }}px;
  border-radius: {{ section.settings.mega_menu_promo_button_border_radius | default: 20 }}px;
  font-size: {{ section.settings.mega_menu_promo_button_font_size | default: 1.3 }}rem;
  pointer-events: auto;
  cursor: pointer;
}


  /* Parents links normales */
