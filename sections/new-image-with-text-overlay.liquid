{{- 'image-with-text-overlay.css' | asset_url | stylesheet_tag -}}
{%- liquid
    assign section_width = section.settings.section_width
    assign image = section.settings.image
    assign image_parallax = section.settings.image_parallax
    assign desktop_height = section.settings.desktop_height
    assign mobile_height = section.settings.mobile_height
    assign content_width = section.settings.content_width
    assign content_position = section.settings.content_position
    assign text_alignment = section.settings.text_alignment
    assign overlay_color = section.settings.overlay_color
    assign overlay_opacity = section.settings.overlay_opacity
    assign disable_top_spacing = section.settings.disable_top_spacing
    assign disable_bottom_spacing = section.settings.disable_bottom_spacing

    case mobile_height
        when 'mobile-height-350'
            assign mobile_image_height = 350
        when 'mobile-height-400'
            assign mobile_image_height = 400
        when 'mobile-height-450'
            assign mobile_image_height = 450
        when 'mobile-height-500'
            assign mobile_image_height = 620
        else
            assign mobile_image_height = 620
    endcase

    assign priority = false
    assign heading_tag = 'h3'
    if section.index == 1
        assign priority = 'high'
    assign heading_tag = 'h1'
    endif
-%}
{%- if section.settings.use_global_font -%}
  {% assign section_font = settings.font_body | default: 'inherit' %}
{%- else -%}
  {% assign section_font = section.settings.font_family | default: settings.font_body | default: 'inherit' %}
{%- endif -%}

<div class="row {{ section_width }}"
     style="--section-font-family: {{ section_font }};">

    <div class="small-12 columns">
        <image-with-text-overlay class="image-with-text-overlay text-{{ text_alignment }} {{ mobile_height }} {{ desktop_height }} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}"
          style="--color-overlay-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }};--overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }};">
            
            <div class="image-with-text-overlay--bg parallax--{{ image_parallax }}">
                {% if image %}
                    {%- liquid
                        assign small_width = image.src.height | times: '375' | divided_by: image.src.width
                        assign master_width = image.src.width | append: 'x' | append: image.src.height
                        assign width = '375x' | append: small_width | append: ',' | append: master_width
                        assign class = ''
                        if section.settings.mobile_image
                            assign class = class | append: ' image-with-text-overlay--desktop'
                        endif
                    -%}
                    {%- render 'responsive-image', image: image, sizes: width, class: class, priority: priority -%}
                {% else %}
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder_svg_tag' }}
                {% endif %}

                {%- if section.settings.mobile_image -%}
                    {%- liquid
                        assign image = section.settings.mobile_image
                        assign master_width = image.src.width | append: 'x' | append: image.src.height
                        assign width = '375x' | append: mobile_image_height | append: ',' | append: master_width
                        assign class = ''
                        if image_parallax
                            assign class = 'thb-parallax-image'
                        endif
                        assign class = class | append: ' image-with-text-overlay--mobile'
                        render 'responsive-image', image: image, sizes: width, class: class, priority: priority
                    -%}
                {%- endif -%}
            </div>

            <div class="image-with-text-overlay--content content-{{ content_position }}">
                <div class="image-with-text-overlay--content-inner content-width-{{ content_width }}">
                    {%- liquid
                        assign button_group_started = false
                        assign button_count = 0
                    -%}
                    {% for block in section.blocks %}
                        {%- case block.type -%}
                            {%- when 'subheading' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                <div class="block-wrapper block-{{ block.id }}" 
                                     data-block-type="subheading"
                                     {{ block.shopify_attributes }}>
                                    <p class="subheading">
                                      {{ block.settings.text }}
                                    </p>
                                </div>
                            {%- when 'heading' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                <div class="block-wrapper block-{{ block.id }}" 
                                     data-block-type="heading"
                                     {{ block.shopify_attributes }}>
                                    <{{ heading_tag }} class="{{ block.settings.heading_size }} image-with-text-overlay--heading">
                                      {% if block.settings.text contains '<' %}
                                        {{ block.settings.text }}
                                      {% else %}
                                        {{ block.settings.text | newline_to_br }}
                                      {% endif %}
                                    </{{ heading_tag }}>
                                </div>
                            {%- when 'text' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                {%- if block.settings.text != blank -%}
                                  <div class="block-wrapper block-{{ block.id }} text-dropdown-wrapper" 
                                       data-block-type="text"
                                       id="richtext-wrapper-{{ block.id }}"
                                       {{ block.shopify_attributes }}>
                                      <details class="text-dropdown{% unless block.settings.enable_dropdown_animations_desktop %} dropdown-animations-disabled-desktop{% endunless %}{% unless block.settings.enable_dropdown_animations_mobile %} dropdown-animations-disabled-mobile{% endunless %}" 
                                                data-block-id="{{ block.id }}"
                                                {% if block.settings.dropdown_initially_open %}open{% endif %}>
                                        <summary class="text-dropdown-summary" 
                                                 data-summary-closed="{% if block.settings.summary_text_closed != blank %}{{ block.settings.summary_text_closed | escape }}{% else %}Creating the World's Healthiest Fashion{% endif %}"
                                                 data-summary-open="{% if block.settings.summary_text_open != blank %}{{ block.settings.summary_text_open | escape }}{% else %}Creating the World's Healthiest Fashion{% endif %}">
                                          {% if block.settings.summary_text_closed != blank %}{{ block.settings.summary_text_closed }}{% else %}Creating the World's Healthiest Fashion{% endif %}
                                        </summary>
                                        <div class="text-dropdown-content">
                                          <div id="richtext-{{ block.id }}" class="rte description-size--{{ block.settings.description_size }}">
                                            {{ block.settings.text }}
                                          </div>
                                        </div>
                                      </details>
                                  </div>
                                {%- endif -%}
                            {%- when 'button' -%}
                                {% if block.settings.button_text != blank %}
                                  {% if button_count == 0 %}
                                    <div class="buttons-grid-wrapper">
                                    {% assign button_group_started = true %}
                                  {% endif %}
                                  {% assign button_count = button_count | plus: 1 %}
                                  <div class="block-wrapper block-{{ block.id }}" 
                                       data-block-type="button"
                                       {{ block.shopify_attributes }}>
                                      <a class="button custom-btn-{{ block.id }}{% if block.settings.button_outline %} outline{% endif %}"
                                         href="{{ block.settings.button_link }}"
                                         role="button">
                                        {{ block.settings.button_text }}
                                      </a>
                                  </div>
                                  {% assign next_block = section.blocks[forloop.index] %}
                                  {% if next_block.type != 'button' or forloop.last %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                  {% endif %}
                                {% endif %}
                            {%- when 'space' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                <div class="block-wrapper block-space block-{{ block.id }}" 
                                     data-block-type="space"
                                     {{ block.shopify_attributes }}></div>
                        {%- endcase -%}
                    {% endfor %}
                    {% if button_group_started %}
                        </div>
                    {% endif %}
                </div>
            </div>

        </image-with-text-overlay>
    </div>
</div>

<script src="{{ 'image-with-text-overlay.js' | asset_url }}" defer="defer"></script>

<style>
/* ============================================
   SECTION-SPECIFIC DYNAMIC STYLES
   CSS custom properties defined here, no inline styles
   ============================================ */

#shopify-section-{{ section.id }} {
  --section-desktop-height: {{ section.settings.desktop_vh_height }}vh;
}

/* Block-specific CSS custom properties */
{% for block in section.blocks %}
  {%- case block.type -%}
