<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700;800;900&display=swap" rel="stylesheet">

{{- 'image-with-text-overlay.css' | asset_url | stylesheet_tag -}}
{%- liquid
    assign section_width = section.settings.section_width
    assign image = section.settings.image
    assign image_parallax = section.settings.image_parallax
    assign desktop_height = section.settings.desktop_height
    assign mobile_height = section.settings.mobile_height
    assign content_width = section.settings.content_width
    assign content_position = section.settings.content_position
    assign text_alignment = section.settings.text_alignment
    assign overlay_color = section.settings.overlay_color
    assign overlay_opacity = section.settings.overlay_opacity
    assign disable_top_spacing = section.settings.disable_top_spacing
    assign disable_bottom_spacing = section.settings.disable_bottom_spacing

    case mobile_height
        when 'mobile-height-350'
            assign mobile_image_height = 350
        when 'mobile-height-400'
            assign mobile_image_height = 400
        when 'mobile-height-450'
            assign mobile_image_height = 450
        when 'mobile-height-500'
            assign mobile_image_height = 620
        else
            assign mobile_image_height = 620
    endcase

    assign priority = false
    assign heading_tag = 'h3'
    if section.index == 1
        assign priority = 'high'
    assign heading_tag = 'h1'
    endif
-%}
{%- if section.settings.use_global_font -%}
  {% assign section_font = settings.font_body | default: 'inherit' %}
{%- else -%}
  {% assign section_font = section.settings.font_family | default: settings.font_body | default: 'inherit' %}
{%- endif -%}

<div class="row {{ section_width }}"
     style="--section-font-family: {{ section_font }};">

    <div class="small-12 columns">
        <image-with-text-overlay class="image-with-text-overlay text-{{ text_alignment }} {{ mobile_height }} {{ desktop_height }} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}"
          style="--color-overlay-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }};--overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }};">
            
            <div class="image-with-text-overlay--bg parallax--{{ image_parallax }}">
                {% if image %}
                    {%- liquid
                        assign small_width = image.src.height | times: '375' | divided_by: image.src.width
                        assign master_width = image.src.width | append: 'x' | append: image.src.height
                        assign width = '375x' | append: small_width | append: ',' | append: master_width
                        assign class = ''
                        if section.settings.mobile_image
                            assign class = class | append: ' image-with-text-overlay--desktop'
                        endif
                    -%}
                    {%- render 'responsive-image', image: image, sizes: width, class: class, priority: priority -%}
                {% else %}
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder_svg_tag' }}
                {% endif %}

                {%- if section.settings.mobile_image -%}
                    {%- liquid
                        assign image = section.settings.mobile_image
                        assign master_width = image.src.width | append: 'x' | append: image.src.height
                        assign width = '375x' | append: mobile_image_height | append: ',' | append: master_width
                        assign class = ''
                        if image_parallax
                            assign class = 'thb-parallax-image'
                        endif
                        assign class = class | append: ' image-with-text-overlay--mobile'
                        render 'responsive-image', image: image, sizes: width, class: class, priority: priority
                    -%}
                {%- endif -%}
            </div>

            <div class="image-with-text-overlay--content content-{{ content_position }}">
                <div class="image-with-text-overlay--content-inner content-width-{{ content_width }}">
                    {%- liquid
                        assign button_group_started = false
                        assign button_count = 0
                        assign bottom_section_started = false
                    -%}
                    {% for block in section.blocks %}
                        {%- case block.type -%}
                            {%- when 'subheading' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                {%- if block.id == 'subheading_r7FGyJ' -%}
                                    {% unless bottom_section_started %}
                                        <div class="bf-bottom-section">
                                        {% assign bottom_section_started = true %}
                                    {% endunless %}
                                {%- endif -%}
                                <div class="block-wrapper block-{{ block.id }}" 
                                     data-block-type="subheading"
                                     {{ block.shopify_attributes }}>
                                    <p class="subheading">
                                      {{ block.settings.text }}
                                    </p>
                                </div>
                            {%- when 'heading' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                <div class="block-wrapper block-{{ block.id }}" 
                                     data-block-type="heading"
                                     {{ block.shopify_attributes }}>
                                    <{{ heading_tag }} class="{{ block.settings.heading_size }} image-with-text-overlay--heading">
                                      {%- if block.settings.sale_line_1 != blank or block.settings.sale_line_2_prefix != blank or block.settings.sale_line_2_yellow != blank or block.settings.sale_line_2_suffix != blank or block.settings.sale_line_3_discount != blank -%}
                                        {%- assign line_1 = block.settings.sale_line_1 | default: "CYBER MONDAY" -%}
                                        {%- assign line_2_prefix = block.settings.sale_line_2_prefix | default: "FINAL HOURS OF THE" -%}
                                        {%- assign line_2_yellow = block.settings.sale_line_2_yellow | default: "YEAR'S BEST" -%}
                                        {%- assign line_2_suffix = block.settings.sale_line_2_suffix | default: "DEALS!" -%}
                                        {%- assign line_3_discount = block.settings.sale_line_3_discount | default: "25% OFF SITEWIDE" -%}
                                        {%- if line_3_discount contains 'SITEWIDE' -%}
                                          {%- assign discount_first = line_3_discount | remove: 'SITEWIDE' | strip -%}
                                          {%- assign discount_second = "SITEWIDE" -%}
                                        {%- elsif line_3_discount contains 'OFF' -%}
                                          {%- assign discount_parts = line_3_discount | split: 'OFF' -%}
                                          {%- assign discount_first = discount_parts[0] | append: 'OFF' | strip -%}
                                          {%- assign discount_second = discount_parts[1] | strip | default: "" -%}
                                        {%- else -%}
                                          {%- assign discount_parts = line_3_discount | split: ' ' -%}
                                          {%- if discount_parts.size >= 3 -%}
                                            {%- assign discount_first = discount_parts[0] | append: ' ' | append: discount_parts[1] | strip -%}
                                            {%- assign discount_second = discount_parts | slice: 2, 10 | join: ' ' | strip -%}
                                          {%- else -%}
                                            {%- assign discount_first = discount_parts[0] | default: "25% OFF" -%}
                                            {%- assign discount_second = discount_parts | slice: 1, 10 | join: ' ' | strip | default: "SITEWIDE" -%}
                                          {%- endif -%}
                                        {%- endif -%}
                                        <span class="bf-yellow-bf">{{ line_1 }}</span><span class="bf-group-left"><span class="bf-white">{{ line_2_prefix }}</span> <span class="bf-yellow">{{ line_2_yellow }}</span> <span class="bf-white">{{ line_2_suffix }}</span></span><div class="bf-line-3-wrapper"><span class="bf-discount">{{ discount_first }}</span> <span class="bf-sitewide">{{ discount_second }}</span></div>
                                      {%- elsif block.settings.text contains '<' -%}
                                        {{ block.settings.text }}
                                      {%- else -%}
                                        {{ block.settings.text | newline_to_br }}
                                      {%- endif -%}
                                    </{{ heading_tag }}>
                                </div>
                            {%- when 'text' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                {%- if block.settings.text != blank -%}
                                  <div class="block-wrapper block-{{ block.id }} text-dropdown-wrapper" 
                                       data-block-type="text"
                                       id="richtext-wrapper-{{ block.id }}"
                                       {{ block.shopify_attributes }}>
                                      <details class="text-dropdown{% unless block.settings.enable_dropdown_animations_desktop %} dropdown-animations-disabled-desktop{% endunless %}{% unless block.settings.enable_dropdown_animations_mobile %} dropdown-animations-disabled-mobile{% endunless %}" 
                                                data-block-id="{{ block.id }}"
                                                {% if block.settings.dropdown_initially_open %}open{% endif %}>
                                        <summary class="text-dropdown-summary" 
                                                 data-summary-closed="{% if block.settings.summary_text_closed != blank %}{{ block.settings.summary_text_closed | escape }}{% else %}Creating the World's Healthiest Fashion{% endif %}"
                                                 data-summary-open="{% if block.settings.summary_text_open != blank %}{{ block.settings.summary_text_open | escape }}{% else %}Creating the World's Healthiest Fashion{% endif %}">
                                          {% if block.settings.summary_text_closed != blank %}{{ block.settings.summary_text_closed }}{% else %}Creating the World's Healthiest Fashion{% endif %}
                                        </summary>
                                        <div class="text-dropdown-content">
                                          <div id="richtext-{{ block.id }}" class="rte description-size--{{ block.settings.description_size }}">
                                            {{ block.settings.text }}
                                          </div>
                                        </div>
                                      </details>
                                  </div>
                                {%- endif -%}
                            {%- when 'button' -%}
                                {% if block.settings.button_text != blank %}
                                  {% if button_count == 0 %}
                                    <div class="buttons-grid-wrapper">
                                    {% assign button_group_started = true %}
                                  {% endif %}
                                  {% assign button_count = button_count | plus: 1 %}
                                  <div class="block-wrapper block-{{ block.id }}" 
                                       data-block-type="button"
                                       {{ block.shopify_attributes }}>
                                      <a class="button custom-btn-{{ block.id }}{% if block.settings.button_outline %} outline{% endif %}"
                                         href="{{ block.settings.button_link }}"
                                         role="button">
                                        {{ block.settings.button_text }}
                                      </a>
                                  </div>
                                  {% assign next_block = section.blocks[forloop.index] %}
                                  {% if next_block.type != 'button' or forloop.last %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                    {%- if bottom_section_started -%}
                                        </div>
                                        {% assign bottom_section_started = false %}
                                    {%- endif -%}
                                  {% endif %}
                                {% endif %}
                            {%- when 'space' -%}
                                {% if button_group_started %}
                                    </div>
                                    {% assign button_group_started = false %}
                                    {% assign button_count = 0 %}
                                {% endif %}
                                {%- if bottom_section_started -%}
                                    </div>
                                    {% assign bottom_section_started = false %}
                                {%- endif -%}
                                <div class="block-wrapper block-space block-{{ block.id }}" 
                                     data-block-type="space"
                                     {{ block.shopify_attributes }}></div>
                        {%- endcase -%}
                    {% endfor %}
                    {% if button_group_started %}
                        </div>
                    {% endif %}
                    {%- if bottom_section_started -%}
                        </div>
                    {%- endif -%}
                </div>
            </div>

        </image-with-text-overlay>
    </div>
</div>

<script src="{{ 'image-with-text-overlay.js' | asset_url }}" defer="defer"></script>

<style>
/* ============================================
   SECTION-SPECIFIC DYNAMIC STYLES
   CSS custom properties defined here, no inline styles
   ============================================ */

#shopify-section-{{ section.id }} {
  --section-desktop-height: {{ section.settings.desktop_vh_height }}vh;
}

/* Block-specific CSS custom properties */
{% for block in section.blocks %}
  {%- case block.type -%}
    {%- when 'subheading' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --block-font-size: {{ block.settings.subheading_font_size | divided_by: 16.0 }}rem;
        --block-font-weight: {{ block.settings.subheading_font_weight }};
        --block-color: {{ block.settings.subheading_color }};
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
      }
      {%- if block.id == 'subheading_r7FGyJ' -%}
        #shopify-section-{{ section.id }} .block-subheading_r7FGyJ {
          --block-font-size: 1.0rem;
          --block-font-weight: 400;
          --block-color: #ffffff;
          --block-margin-top: 0rem;
          --block-margin-bottom: 2rem;
        }
      {%- endif -%}
    {%- when 'heading' -%}
      {%- if block.settings.heading_line_height > 0 -%}
        {%- assign heading_line_height = block.settings.heading_line_height -%}
      {%- else -%}
        {%- assign heading_line_height = block.settings.heading_font_size -%}
      {%- endif -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --block-font-size: {{ block.settings.heading_font_size }}rem;
        --block-font-weight: {{ block.settings.heading_font_weight }};
        --block-color: {{ block.settings.heading_color }};
        --block-line-height: {{ heading_line_height }}rem;
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
      }
    {%- when 'text' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --block-font-size: {{ block.settings.text_font_size }}rem;
        --block-font-weight: {{ block.settings.text_font_weight }};
        --block-color: {{ block.settings.text_color }};
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
        --block-line-height: {{ block.settings.line_height }};
      }
    {%- when 'button' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --btn-font-size: {{ block.settings.button_font_size }}px;
        --btn-font-weight: {{ block.settings.button_font_weight }};
        --btn-color: {{ block.settings.button_color }};
        --btn-bg-color: {{ block.settings.button_background_color }};
        --btn-border-width: {{ block.settings.button_border_width | default: 0 }}px;
        --btn-border-style: {{ block.settings.button_border_style | default: 'solid' }};
        --btn-border-color: {{ block.settings.button_border_color | default: '#000000' }};
        --btn-border-radius: {{ block.settings.button_border_radius | default: 4 }}px;
        --btn-hover-color: {{ block.settings.hover_text_color }};
        --btn-hover-bg-color: {{ block.settings.hover_background_color }};
        --btn-hover-border-color: {{ block.settings.hover_border_color }};
      }
    {%- when 'space' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --space-height: {{ block.settings.height }}px;
      }
  {%- endcase -%}
{% endfor %}

/* Responsive heading adjustments */
@media only screen and (max-width: 767px) {
  {% for block in section.blocks %}
    {%- if block.type == 'heading' -%}
      {%- if block.settings.heading_font_size_mobile and block.settings.heading_font_size_mobile > 0 -%}
        #shopify-section-{{ section.id }} .block-{{ block.id }} .image-with-text-overlay--heading {
          font-size: {{ block.settings.heading_font_size_mobile }}rem !important;
        }
      {%- else -%}
        #shopify-section-{{ section.id }} .block-{{ block.id }} .image-with-text-overlay--heading {
          font-size: 1.5rem !important;
        }
      {%- endif -%}
    {%- endif -%}
  {% endfor %}
  
  #shopify-section-{{ section.id }} .block-wrapper[data-block-type="text"] .rte:not(.description-size--medium) {
    font-size: 1rem;
  }
  
  {% for block in section.blocks %}
    {%- if block.type == 'text' -%}
      {%- if block.settings.text_font_size_mobile and block.settings.text_font_size_mobile > 0 -%}
        #shopify-section-{{ section.id }} .block-{{ block.id }} .rte.description-size--medium p {
          font-size: {{ block.settings.text_font_size_mobile }}rem !important;
        }
      {%- else -%}
        #shopify-section-{{ section.id }} .block-{{ block.id }} .rte.description-size--medium p {
          font-size: 0.7rem !important;
        }
      {%- endif -%}
    {%- endif -%}
  {% endfor %}
  
  #shopify-section-{{ section.id }} .buttons-grid-wrapper {
    gap: 10px;
    width: 100%;
    /* justify-content: center; */
    flex-wrap: wrap;
  }
  
  #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-wrapper[data-block-type="button"] {
    margin: 0 !important;
    flex: 1;
    min-width: 0;
  }
  
  #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-wrapper[data-block-type="button"] .button {
    width: 100%;
    margin: 0 !important;
  }
  
  /* Override button CSS variables for mobile - must have higher specificity than block-specific styles */
  {% for block in section.blocks %}
    {%- if block.type == 'button' -%}
      {%- assign mobile_font_size = block.settings.button_font_size_mobile | default: 15 -%}
      {%- if mobile_font_size > 0 -%}
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} {
          --btn-font-size: {{ mobile_font_size }}px;
          --btn-font-weight: 400;
        }
        /* Direct style override for mobile buttons to ensure font-size and font-weight are applied */
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} .button[class*="custom-btn"] {
          font-size: {{ mobile_font_size }}px !important;
          font-weight: 400 !important;
        }
      {%- else -%}
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} {
          --btn-font-size: 15px;
          --btn-font-weight: 400;
        }
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} .button[class*="custom-btn"] {
          font-size: 15px !important;
          font-weight: 400 !important;
        }
      {%- endif -%}
    {%- endif -%}
  {% endfor %}
  
  /* Ensure p elements inside description-size--medium have correct font size in mobile */
  #shopify-section-{{ section.id }} .rte.description-size--medium p,
  #shopify-section-{{ section.id }} .block-wrapper[data-block-type="text"] .rte.description-size--medium p {
    font-weight: 400 !important;
  }
  
  /* Override font-weight for description-size--medium in mobile - must override block-specific styles */
  #shopify-section-{{ section.id }} .rte.description-size--medium,
  #shopify-section-{{ section.id }} .block-wrapper[data-block-type="text"] .rte.description-size--medium {
    font-weight: 400 !important;
  }
}

/* Section-specific overrides */
#shopify-section-{{ section.id }} p {
  margin-bottom: 0;
}

/* ============================================
   BLACK FRIDAY BANNER SPECIFIC STYLES
   Refactored and optimized CSS with rem units
   ============================================ */

/* Section-specific selector for scoping */
#shopify-section-{{ section.id }} {
  /* Layout Variables */
  --bf-section-max-width: 98.75rem; /* 1580px */
  --bf-section-padding-desktop: 3.4375rem; /* 55px */
  --bf-section-padding-mobile: 1.875rem; /* 30px */
  --bf-content-padding-mobile: 12%;
  --bf-buttons-gap-desktop: 2.85625rem; /* 45.7px */
  --bf-buttons-margin-right: 22%;
  
  /* Typography Variables - Desktop */
  --bf-heading-font-size-desktop: 2.5rem; /* 40px */
  --bf-heading-line-height-desktop: 2.875rem; /* 46px */
  --bf-discount-font-size-desktop: 6rem; /* 96px */
  --bf-discount-line-height-desktop: 5.625rem; /* 90px */
  --bf-subheading-font-size-desktop: 2.5rem; /* 40px */
  --bf-subheading-line-height-desktop: 2.5rem; /* 40px */
  
  /* Typography Variables - Mobile */
  --bf-heading-font-size-mobile: 1.25rem; /* 20px */
  --bf-heading-line-height-mobile: 1.5625rem; /* 25px */
  --bf-discount-font-size-mobile: 2.5rem; /* 40px */
  --bf-discount-line-height-mobile: 1.75rem; /* 28px */
  --bf-sitewide-font-size-mobile: 1.25rem; /* 20px */
  --bf-subheading-font-size-mobile: 2.1875rem; /* 35px */
  --bf-subheading-line-height-mobile: 2.5rem; /* 40px */
  
  /* Letter Spacing Variables - Desktop */
  --bf-letter-spacing-yellow-bf: 1.575rem; /* 25.2px */
  --bf-letter-spacing-yellow-white: 0.2rem; /* 3.2px */
  --bf-letter-spacing-discount: 1.2rem; /* 19.2px */
  
  /* Letter Spacing Variables - Mobile */
  --bf-letter-spacing-mobile: 0.1875rem; /* 3px */
  --bf-letter-spacing-discount-mobile: 0.375rem; /* 6px */
  --bf-letter-spacing-subheading-mobile: 0.13125rem; /* 2.1px */
}

/* ============================================
   LAYOUT STYLES
   ============================================ */

/* Content container - Full height */
#shopify-section-{{ section.id }} .image-with-text-overlay--content-inner.content-width-medium {
  height: 100%;
  min-height: 100%;
  gap: 0;
}

/* Desktop/Laptop Layout (768px+) 
   This breakpoint covers:
   - Tablets in landscape mode (768px+)
   - Small laptops (1024px+)
   - Standard laptops (1366px+)
   - Desktop monitors (1920px+)
   All desktop/laptop sizes use the same styles for consistency */
@media only screen and (min-width: 768px) {
  /* Content container positioning */
  #shopify-section-{{ section.id }} .image-with-text-overlay--content.content-bottom-center {
    padding-top: 0 !important;
    align-items: center !important;
    max-width: var(--bf-section-max-width) !important;
    margin: 0 auto !important;
    justify-content: center !important;
  }
  
  #shopify-section-{{ section.id }} .image-with-text-overlay--content-inner.content-width-medium {
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    align-items: flex-start !important;
    width: 100% !important;
    max-width: 100% !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    margin: 0 auto !important;
  }
  
  /* Section padding */
  #shopify-section-{{ section.id }} .image-with-text-overlay {
    padding-left: var(--bf-section-padding-desktop) !important;
    padding-right: var(--bf-section-padding-desktop) !important;
  }
}

/* Mobile Layout (max-width: 767px) */
@media only screen and (max-width: 767px) {
  /* Reset content container - remove any default padding/margin */
  #shopify-section-{{ section.id }} .image-with-text-overlay--content.content-bottom-center {
    padding: 0 !important;
    margin: 0 !important;
    align-items: flex-end !important;
  }
  
  #shopify-section-{{ section.id }} .image-with-text-overlay {
    padding: var(--bf-section-padding-mobile) 0 !important;
  }
  
  /* Content inner - flex container with two sections: heading top, subheading+buttons bottom */
  #shopify-section-{{ section.id }} .image-with-text-overlay--content-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    min-height: 100%;
    padding: 0 !important;
    margin: 0 !important;
  }
  
  /* Reset all block-wrapper margins in mobile to avoid conflicts */
  #shopify-section-{{ section.id }} .image-with-text-overlay--content-inner .block-wrapper {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  
  /* Section 1: Heading - Order 1, stick to top */
  #shopify-section-{{ section.id }} .block-heading_QdDkF8 {
    order: 1;
    align-self: flex-start;
    width: 100%;
    margin-top: 0 !important;
    margin-bottom: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  
  /* Heading container - remove all margins and padding (mobile only) */
  #shopify-section-{{ section.id }} .block-heading_QdDkF8 .image-with-text-overlay--heading {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
  }
  
  /* Remove all margins from elements inside heading */
  #shopify-section-{{ section.id }} .image-with-text-overlay--heading * {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
  }
  
  /* Bottom section wrapper - groups subheading and buttons together (mobile only) */
  #shopify-section-{{ section.id }} .bf-bottom-section {
    order: 2;
    display: flex;
    flex-direction: column;
    margin-top: auto !important;
    margin-bottom: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    width: 100%;
