          font-size: {{ mobile_font_size }}px !important;
          font-weight: 400 !important;
        }
      {%- else -%}
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} {
          --btn-font-size: 15px;
          --btn-font-weight: 400;
        }
        #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-{{ block.id }} .button[class*="custom-btn"] {
          font-size: 15px !important;
          font-weight: 400 !important;
        }
      {%- endif -%}
    {%- endif -%}
  {% endfor %}
  
  /* Ensure p elements inside description-size--medium have correct font size in mobile */
  #shopify-section-{{ section.id }} .rte.description-size--medium p,
  #shopify-section-{{ section.id }} .block-wrapper[data-block-type="text"] .rte.description-size--medium p {
    font-weight: 400 !important;
  }
  
  /* Override font-weight for description-size--medium in mobile - must override block-specific styles */
  #shopify-section-{{ section.id }} .rte.description-size--medium,
  #shopify-section-{{ section.id }} .block-wrapper[data-block-type="text"] .rte.description-size--medium {
    font-weight: 400 !important;
  }
}

/* Section-specific overrides */
