        --block-font-size: {{ block.settings.subheading_font_size | divided_by: 16.0 }}rem;
        --block-font-weight: {{ block.settings.subheading_font_weight }};
        --block-color: {{ block.settings.subheading_color }};
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
      }
      {%- if block.id == 'subheading_r7FGyJ' -%}
        #shopify-section-{{ section.id }} .block-subheading_r7FGyJ {
          --block-font-size: 1.0rem;
          --block-font-weight: 400;
          --block-color: #ffffff;
          --block-margin-top: 0rem;
          --block-margin-bottom: 2rem;
        }
      {%- endif -%}
    {%- when 'heading' -%}
      {%- if block.settings.heading_line_height > 0 -%}
        {%- assign heading_line_height = block.settings.heading_line_height -%}
      {%- else -%}
        {%- assign heading_line_height = block.settings.heading_font_size -%}
      {%- endif -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --block-font-size: {{ block.settings.heading_font_size }}rem;
        --block-font-weight: {{ block.settings.heading_font_weight }};
        --block-color: {{ block.settings.heading_color }};
        --block-line-height: {{ heading_line_height }}rem;
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
      }
    {%- when 'text' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --block-font-size: {{ block.settings.text_font_size }}rem;
        --block-font-weight: {{ block.settings.text_font_weight }};
        --block-color: {{ block.settings.text_color }};
        --block-margin-top: {{ block.settings.margin_top }}rem;
        --block-margin-bottom: {{ block.settings.margin_bottom }}rem;
        --block-line-height: {{ block.settings.line_height }};
      }
    {%- when 'button' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --btn-font-size: {{ block.settings.button_font_size }}px;
        --btn-font-weight: {{ block.settings.button_font_weight }};
        --btn-color: {{ block.settings.button_color }};
        --btn-bg-color: {{ block.settings.button_background_color }};
        --btn-border-width: {{ block.settings.button_border_width | default: 0 }}px;
        --btn-border-style: {{ block.settings.button_border_style | default: 'solid' }};
        --btn-border-color: {{ block.settings.button_border_color | default: '#000000' }};
        --btn-border-radius: {{ block.settings.button_border_radius | default: 4 }}px;
        --btn-hover-color: {{ block.settings.hover_text_color }};
        --btn-hover-bg-color: {{ block.settings.hover_background_color }};
        --btn-hover-border-color: {{ block.settings.hover_border_color }};
      }
    {%- when 'space' -%}
      #shopify-section-{{ section.id }} .block-{{ block.id }} {
        --space-height: {{ block.settings.height }}px;
      }
  {%- endcase -%}
{% endfor %}

/* Responsive heading adjustments */
