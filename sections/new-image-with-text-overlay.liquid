    gap: 10px;
    width: 100%;
    /* justify-content: center; */
    flex-wrap: wrap;
  }
  
  #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-wrapper[data-block-type="button"] {
    margin: 0 !important;
    flex: 1;
    min-width: 0;
  }
  
  #shopify-section-{{ section.id }} .buttons-grid-wrapper .block-wrapper[data-block-type="button"] .button {
    width: 100%;
    margin: 0 !important;
  }
  
  /* Override button CSS variables for mobile - must have higher specificity than block-specific styles */
  {% for block in section.blocks %}
    {%- if block.type == 'button' -%}
      {%- assign mobile_font_size = block.settings.button_font_size_mobile | default: 15 -%}
