{% stylesheet %}
.boton-blog-facebook-wrapper .facebook-button {
  border-radius: 4px;
  padding: 10px 16px;
  margin: 5px;
  display: inline-block;
  text-decoration: none;
  transition: transform 0.2s ease-in-out, font-weight 0.2s ease;
  font-family: inherit;
}

.boton-blog-facebook-wrapper .facebook-button:hover {
  transform: scale(1.08);
  font-weight: 700;
}
.boton-blog-facebook-wrapper{
    padding: 0 8%;
}
{% endstylesheet %}



<div class="boton-blog-facebook-wrapper" style="text-align: right; margin: 20px 0;">
