<div class="custom-section-wrapper">
  <div class="custom-section-inner">

    <!-- Columna izquierda con bloques -->
    <div class="custom-column custom-left-column" style="text-align: {{ section.settings.left_alignment }};">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'left_heading' %}
            <h3 class="custom-left-heading"
                style="font-size: {{ block.settings.font_size | divided_by: 16.0 }}rem!important; font-weight: {{ block.settings.font_weight }}; color: {{ block.settings.color }};">
              {{ block.settings.text }}
            </h3>
          {% when 'left_text' %}
            <div class="custom-left-richtext rte"
       style="font-size: {{ block.settings.font_size | divided_by: 16.0 }}rem!important; font-weight: {{ block.settings.font_weight }}; color: {{ block.settings.color }};
          letter-spacing:0.5px;    ">
    {{ block.settings.richtext }}
  </div>
          {% when 'left_image' %}
            <div class="custom-left-image-block">
              <img src="{{ block.settings.image | img_url: '800x' }}" alt="left image" class="custom-left-image" />
              <p class="custom-left-caption"
                 style="font-size: {{ block.settings.caption_size | divided_by: 16.0 }}rem!important; font-weight: {{ block.settings.caption_weight }}; color: {{ block.settings.caption_color }};">
                {{ block.settings.caption }}
              </p>
            </div>
            {% when 'left_table' %}
  <div class="cst-tableb">
    <table class="cst-table">
      <tbody>
        {% for i in (1..15) %}
          {% assign row_key = "row_" | append: i %}
          {% assign row_string = block.settings[row_key] | strip %}
          {% if row_string contains "<p>" and row_string contains "</p>" %}
            {% assign raw_row = row_string | replace: "<p>", "" | replace: "</p>", "" %}
            {% assign cells = raw_row | split: ";;" %}
            <tr>
              {% for cell in cells %}
                <td>{{ cell | raw  }}</td>
              {% endfor %}
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
    </table>
  </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Columna derecha -->
    <div class="custom-column custom-right-column" style="text-align: {{ section.settings.right_alignment }};">
      <div class="custom-right-title rte"
     style="font-size: {{ section.settings.right_title_size | divided_by: 16.0 }}rem!important; font-weight: {{ section.settings.right_title_weight }};
        color: {{ section.settings.right_title_color }};line-height: 1;">
  {{ section.settings.right_title_richtext| raw }}
</div>

      {% for block in section.blocks %}
    {% if block.type == 'right_image_block' %}
      <div class="custom-right-image-block" style="position: relative; display: inline-block; margin-bottom: 20px;width: 100%;">
        {% if block.settings.link != blank %}
  <a href="{{ block.settings.link }}">
{% endif %}

<img src="{{ block.settings.image | img_url: '800x' }}"
     alt="right image"
     class="custom-right-image"
     style="width: 100%; max-width: 100%;padding-left:-10px!important;padding-right:-10px!important;" />

{% if block.settings.link != blank %}
  </a>
{% endif %}
        <p class="custom-right-image-caption"
           style="
             position: absolute;
             top: 50%;padding:0!important;
             left: 50%;
             transform: translate(-50%, -50%);
             color: {{ block.settings.caption_color }};
             font-size: {{ block.settings.caption_size | divided_by: 16.0 }}rem!important;
             font-weight: {{ block.settings.caption_weight }};
             margin: 0;line-height: 1;
             width: 80%; text-align:center;
max-width: 80%; 
           ">
          {{ block.settings.caption }}
        </p>
      </div>
    {% endif %}
  {% endfor %}
</div>

  </div>
</div>

<style>
.cst-tableb {
  margin: 20px 0;
  padding: 10px;
  text-align: center;
  border: 1px solid #ddd; 
  
  
}
.cst-table {
  width: 100%;
  border-collapse: collapse;
  border: 1px solid #ddd;
}
.cst-table th,
.cst-table td {
  padding: 10px;
  border: 1px solid #ddd;
  text-align: center;
}
.cst-table th {
  background-color: #f4f4f4;
}



.cst-table tbody tr:nth-child(-n+15):hover {
  background-color: #f0f0f0;
  transition: background-color 0.3s ease;
}

.cst-tableb table {
  margin-bottom: 0; 
}

  .custom-section-wrapper {
    padding: 4% 7%;
  }

  .custom-section-inner {
    display: flex;
    gap: 30px;
    align-items: flex-start;
    flex-wrap: nowrap;
  }

  .custom-column {
    box-sizing: border-box;
  }

  .custom-left-column {
    flex: 0 0 74%;
    max-width: 74%;
  overflow-wrap: break-word;
  word-wrap: break-word;
  word-break: break-word;
  box-sizing: border-box;
  }

  .custom-right-column {
    flex: 0 0 23%;
     max-width: 23%;
  overflow-wrap: break-word;
  word-wrap: break-word;
  word-break: break-word;
  }

  .custom-left-image {
    width: 100%;
    height: auto;
    display: block;
  }
 .custom-right-image{
  width: 100%;
  height: 350px;
  object-fit: cover;object-position: center center;
  display: block;
 }
.custom-left-richtext{
  text-align:justify;
}
  @media (max-width: 768px) {
  .custom-section-inner {
    flex-direction: column;
  }

  .custom-left-column {
    flex: 1 1 100%;
    max-width: 100%;
  }

  .custom-right-column {
    display: none !important;
  }
}
</style>


