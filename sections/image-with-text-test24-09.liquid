	assign image = section.settings.image
	assign use_video = section.settings.use_video
	assign video = section.settings.video
	assign video_hosted = section.settings.video_hosted
	assign video_autoplay = section.settings.video_autoplay
	assign video_controls = section.settings.video_controls
	assign height = section.settings.height
	assign content_position = section.settings.content_position
	assign desktop_image_width = section.settings.desktop_image_width
	assign desktop_layout = section.settings.layout
	assign color_bg = section.settings.color_bg
	assign color_text = section.settings.color_text
	assign color_border = section.settings.color_border
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing

	assign ratio = 1
	if height == 'adapt' and image != blank
		assign ratio = image.aspect_ratio
	endif

	if height == 'adapt' and use_video
	 	if video_hosted != blank
			assign ratio = video_hosted.aspect_ratio
		else
			assign ratio = 16.00 | divided_by: 9.00
		endif
	endif
-%}
<style>
 /* Estilos del contenido de collapsible row, fila de imagenes */
  .collapsible-tab-images {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1rem;
}

.collapsible-tab-images .tab-image {
  flex: 1 1 calc(33.333% - 1rem);
}

.collapsible-tab-images img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}

  /* Estilos de los tabs */
.custom-tabs-wrapper {
  margin-top: 20px;
}
.custom-tabs-nav {
 display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  gap: 0;
  margin-bottom: 0;
}
.custom-tab-btn {
  background: #eee;
  border: none;
  padding: 8px 5px;
  cursor: pointer;
  
  font-weight: bold;
  text-align: center;
  transition: background 0.3s;
}
  .custom-tab-btn:hover {
  background-color: var(--tab-hover-color);
}
.custom-tab-btn.active {
  background: var(--tab-active-color);
  color: white;
}
.custom-tabs-content .custom-tab-content {
  display: none;
}
.custom-tabs-content .custom-tab-content.active {
  display: block;
}
  @media (max-width: 767px) {
  .custom-tabs-nav {
    grid-template-columns: 1fr !important;
  }
}
/* Estilos de iconos */
