{% comment %} {{- 'video.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign section_heading = section.settings.heading
	assign section_heading_left = section.settings.heading_left
	assign section_description = section.settings.description
	assign section_width = section.settings.section_width
	assign video = section.settings.video
	assign video_hosted = section.settings.video_hosted
	assign video_autoplay = section.settings.video_autoplay
	assign aspect_ratio = section.settings.aspect_ratio
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing
-%}
<div class="row {{ section_width }}">
	<div class="small-12 columns">
		<div class="video-section section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
			<div class="video-section__inner">
				{% render 'section-header', section_heading: section_heading, section_description: section_description, section_heading_left: section_heading_left %}
				<div class="video-section__container video-aspect--{{ aspect_ratio }} js-video-click">
					{%- if video_hosted != blank -%}
						{%- liquid
							assign sizes = '1340x'
							if full_width
								assign sizes = '1600x'
							endif
						-%}
						{{ video_hosted | video_tag: autoplay: video_autoplay, loop: false, controls: true, muted: video_autoplay, image_size: sizes }}
					{%- elsif video != blank -%}
						{%- if video.type == 'youtube' -%}
							<iframe data-src="https://www.youtube.com/embed/{{ video.id }}?loop=1{%- if video_autoplay -%}&autoplay=1&mute=1{%- endif -%}&playlist={{ video.id }}&iv_load_policy=3&disablekb=1&controls=1&playsinline=1" frameborder="0" class="lazyload" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.heading | escape }}" tabindex="-1"></iframe>
						{%- else -%}
							<iframe data-src="https://player.vimeo.com/video/{{ video.id }}{%- if video_autoplay -%}?background=1{%- endif -%}" frameborder="0" class="lazyload" allow="autoplay; encrypted-media" allowfullscreen title="{{ section.settings.heading | escape }}" tabindex="-1"></iframe>
						{%- endif -%}
					{%- endif -%}
				</div>
			</div>
		</div>
	</div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function() {
  const containers = document.querySelectorAll(".js-video-click");

  containers.forEach(container => {
    // Shopify-hosted <video>
    const videoEl = container.querySelector("video");

	/*nueva implementacion video 1*/
	if (videoEl) {
      container.addEventListener("click", (e) => {
        // Calcular si el clic fue en el Ã¡rea de los controles (parte inferior del video)
        const videoRect = videoEl.getBoundingClientRect();
        const clickY = e.clientY - videoRect.top;
        const controlsHeight = 40; // Altura aproximada de los controles
        const clickedOnControls = clickY > (videoRect.height - controlsHeight);
        
        // Solo pausar/reproducir si NO se hizo clic en los controles
        if (!clickedOnControls) {
          if (videoEl.paused) {
            videoEl.play();
          } else {
            videoEl.pause();
          }
        }
      });
      return;
    }

    // YouTube iframe
    const ytFrame = container.querySelector("iframe[src*='youtube.com']");
    if (ytFrame) {
      // Load YouTube API
      if (!window.YT) {
        const tag = document.createElement('script');
        tag.src = "https://www.youtube.com/iframe_api";
        document.body.appendChild(tag);
      }

      window.onYouTubeIframeAPIReady = function() {
        const player = new YT.Player(ytFrame, {});
        container.addEventListener("click", () => {
          const state = player.getPlayerState();
          if (state === YT.PlayerState.PLAYING) {
            player.pauseVideo();
          } else {
            player.playVideo();
          }
        });
      };
      return;
    }

    // Vimeo iframe
    const vimeoFrame = container.querySelector("iframe[src*='vimeo.com']");
    if (vimeoFrame) {
      if (typeof Vimeo === "undefined") {
        const tag = document.createElement('script');
        tag.src = "https://player.vimeo.com/api/player.js";
        document.body.appendChild(tag);
      }

      vimeoFrame.addEventListener("load", () => {
        const player = new Vimeo.Player(vimeoFrame);
        container.addEventListener("click", async () => {
          const paused = await player.getPaused();
          if (paused) {
            player.play();
          } else {
            player.pause();
          }
        });
      });
    }
  });
});
</script>
