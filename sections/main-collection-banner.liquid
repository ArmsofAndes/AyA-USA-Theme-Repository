{%- liquid
	assign show_collection_image = section.settings.show_collection_image
	assign show_collection_description = section.settings.show_collection_description
	assign show_subcollections = section.settings.show_subcollections
	assign make_heading_uppercase = section.settings.make_heading_uppercase
	assign text_alignment = section.settings.text_alignment
	assign overlay_color = section.settings.overlay_color
	assign overlay_opacity = section.settings.overlay_opacity

	assign image = collection.metafields.custom.header_image | file_url | image_tag: '', ''
assign fallback_image = collection.featured_image

if image == ''
  assign image = fallback_image
endif
	assign title = collection.title
	assign description = collection.description
	assign collection_handle = collection.handle

	if section.settings.image and collection.handle == 'all'
		assign image = section.settings.image
	endif

	assign is_holiday_sale = false
	if template.name == 'collection' and template.suffix == 'holiday-sale-2025'
		assign is_holiday_sale = true
		assign holiday_sale_desktop_image = section.settings.holiday_sale_desktop_image
		assign holiday_sale_mobile_image = section.settings.holiday_sale_mobile_image
		assign holiday_sale_margin_right = section.settings.holiday_sale_margin_right
		assign holiday_sale_margin_left = section.settings.holiday_sale_margin_left
		assign holiday_sale_max_width = section.settings.holiday_sale_max_width
		assign holiday_sale_padding_top_bottom = section.settings.holiday_sale_padding_top_bottom
		assign holiday_sale_padding_left_right = section.settings.holiday_sale_padding_left_right
		assign holiday_sale_mobile_margin_top = section.settings.holiday_sale_mobile_margin_top
		assign holiday_sale_discount_up_to = section.settings.holiday_sale_discount_up_to
		assign holiday_sale_discount_number = section.settings.holiday_sale_discount_number
		assign holiday_sale_discount_percent = section.settings.holiday_sale_discount_percent
		assign holiday_sale_discount_off = section.settings.holiday_sale_discount_off
		assign holiday_sale_section_margin_bottom = section.settings.holiday_sale_section_margin_bottom
	endif
-%}
{%- if template == 'search' -%}
	{%- liquid
		assign show_collection_image = false
		assign show_subcollections = false
		assign title = 'search.heading' | t
	-%}
	{%- capture description %}
		{% assign search_phrase = search.terms | replace: '*', '' %}
		{% if '' != search_phrase %}
			<p>{{ 'search.results_found' | t: count: search.results_count, key: search_phrase }}</p>
		{% endif %}
	{%- endcapture -%}
{%- endif -%}
{{ 'collection-banner.css' | asset_url | stylesheet_tag }}

<div class="collection-banner collection-banner--heading-uppercase-{{ make_heading_uppercase }}{% if show_collection_image and image %} collection-banner--has-bg{% endif %}{% if is_holiday_sale %} collection-banner--holiday-sale-2025{% if holiday_sale_desktop_image or holiday_sale_mobile_image %} collection-banner--holiday-sale-has-bg{% endif %}{% endif %}" style="--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}{% if is_holiday_sale and holiday_sale_desktop_image %} --holiday-sale-desktop-bg: url('{{ holiday_sale_desktop_image | image_url: width: 1920 }}');{% endif %}{% if is_holiday_sale and holiday_sale_mobile_image %} --holiday-sale-mobile-bg: url('{{ holiday_sale_mobile_image | image_url: width: 768 }}');{% endif %}{% if is_holiday_sale %} --holiday-sale-margin-right: {{ holiday_sale_margin_right }}%; --holiday-sale-margin-left: {{ holiday_sale_margin_left }}%; --holiday-sale-max-width: {{ holiday_sale_max_width }}rem; --holiday-sale-padding-top-bottom: {{ holiday_sale_padding_top_bottom }}rem; --holiday-sale-padding-left-right: {{ holiday_sale_padding_left_right }}rem; --holiday-sale-mobile-margin-top: {{ holiday_sale_mobile_margin_top }}%;{% endif %}">
