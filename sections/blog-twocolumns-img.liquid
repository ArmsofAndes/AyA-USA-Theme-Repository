<div class="sectblog-twocolumns-img">
  <div class="blogcolumns-wrapper">
    
    <!-- Columna 1 -->
    <div class="column-box">
      <div class="column-text-top" style="color: {{ section.settings.text1_color }}; font-size: {{ section.settings.text1_size }}px; font-weight: {{ section.settings.text1_weight }};">
        {{ section.settings.text1_top }}
      </div>
      
      {% if section.settings.image1 != blank %}
        <img src="{{ section.settings.image1 | img_url: '500x' }}" alt="Imagen 1" style="max-width: 100%; height: auto;" />
      {% endif %}
      
     <div class="column-text-bottom rte" style="color: {{ section.settings.text1b_color }}; font-size: {{ section.settings.text1b_size }}px; font-weight: {{ section.settings.text1b_weight }};">
        {{ section.settings.text1_bottom }}
      </div>
    </div>

    <!-- Columna 2 -->
    <div class="column-box">
      <div class="column-text-top" style="color: {{ section.settings.text2_color }}; font-size: {{ section.settings.text2_size }}px; font-weight: {{ section.settings.text2_weight }};">
        {{ section.settings.text2_top }}
      </div>
      
      {% if section.settings.image2 != blank %}
        <img src="{{ section.settings.image2 | img_url: '500x' }}" alt="Imagen 2" style="max-width: 100%; height: auto;" />
      {% endif %}
      
      <div class="column-text-bottom rte" style="color: {{ section.settings.text2b_color }}; font-size: {{ section.settings.text2b_size }}px; font-weight: {{ section.settings.text2b_weight }};">
        {{ section.settings.text2_bottom }}
      </div>
    </div>

  </div>
</div>

<style>
  .sectblog-twocolumns-img {
    padding: 60px 20px;
  }

  .blogcolumns-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 40px;
  }

  .column-box {
    flex: 1 1 300px;
    max-width: 500px;
    text-align: center;
  }

  .column-text-top,
  .column-text-bottom {
    margin: 20px 0;
  }

  @media screen and (max-width: 768px) {
    .blogcolumns-wrapper {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

